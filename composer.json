{
    "name": "lynkbyte/laravel-evolution-api",
    "description": "A production-ready Laravel package for Evolution API WhatsApp integration with queue support, logging, metrics, and comprehensive API coverage.",
    "keywords": [
        "laravel",
        "whatsapp",
        "evolution-api",
        "messaging",
        "api",
        "queue",
        "webhook"
    ],
    "homepage": "https://github.com/lynkbyte/laravel-evolution-api",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Lynkbyte",
            "email": "hello@lynkbyte.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "illuminate/contracts": "^11.0|^12.0",
        "illuminate/http": "^11.0|^12.0",
        "illuminate/support": "^11.0|^12.0",
        "illuminate/queue": "^11.0|^12.0",
        "illuminate/events": "^11.0|^12.0",
        "illuminate/database": "^11.0|^12.0",
        "illuminate/cache": "^11.0|^12.0",
        "guzzlehttp/guzzle": "^7.8"
    },
    "require-dev": {
        "laravel/pint": "^1.18",
        "orchestra/testbench": "^9.0|^10.0",
        "pestphp/pest": "^3.0",
        "phpstan/phpstan": "^2.0",
        "mockery/mockery": "^1.6"
    },
    "autoload": {
        "psr-4": {
            "Lynkbyte\\EvolutionApi\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Lynkbyte\\EvolutionApi\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@composer run prepare",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "coverage": "php8.3 vendor/bin/pest --coverage",
        "coverage-html": "php8.3 vendor/bin/pest --coverage-html build/coverage",
        "coverage-text": "php8.3 vendor/bin/pest --coverage --coverage-text=build/coverage.txt",
        "coverage-clover": "php8.3 vendor/bin/pest --coverage-clover build/logs/clover.xml",
        "coverage-all": "php8.3 vendor/bin/pest --coverage --coverage-html build/coverage --coverage-clover build/logs/clover.xml",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Lynkbyte\\EvolutionApi\\EvolutionApiServiceProvider"
            ],
            "aliases": {
                "EvolutionApi": "Lynkbyte\\EvolutionApi\\Facades\\EvolutionApi"
            }
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
